{
  "name": "electron-webpack",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "karma start",
    "start": "rimraf ./dist/* && npm-run-all -pr server:dev watch:main",
    "build": "npm-run-all -pr build:main build:dev",
    "build:main": "cross-env NODE_ENV=development webpack --config ./config/webpack.electron.ts --progress --profile --colors",
    "build:dev": "cross-env NODE_ENV=development webpack --config ./config/webpack.dev.ts --progress --profile --colors",
    "server:dev": "cross-env NODE_ENV=development START_HOT=1 webpack-dev-server --config ./config/webpack.dev.ts --progress --profile --colors",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch:main": "cross-env START_HOT=1 npm run build:main -- --watch",
    "watch:main:prod": "npm run build:main -- --watch",
    "watch:renderer": "cross-env START_HOT=1 npm run build:dev -- --watch",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron dist/main.js"
  },
  "author": "Carlos Esteban Lopez Jaramillo",
  "license": "MIT",
  "devDependencies": {
    "@types/core-js": "^0.9.37",
    "@types/electron": "^1.4.34",
    "@types/html-webpack-plugin": "^2.11.2",
    "@types/jasmine": "^2.5.46",
    "@types/karma": "^0.13.34",
    "@types/karma-coverage": "^0.5.31",
    "@types/karma-jasmine": "0.0.29",
    "@types/node": "^7.0.10",
    "@types/selenium-webdriver": "^3.0.0",
    "@types/uglify-js": "^2.6.28",
    "@types/webpack": "^2.2.12",
    "awesome-typescript-loader": "^3.1.2",
    "codelyzer": "^3.0.0-beta.3",
    "cross-env": "^3.2.4",
    "devtron": "^1.4.0",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine": "^2.5.3",
    "karma": "^1.5.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.0.0",
    "karma-electron": "^5.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-notification-reporter": "^0.1.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-source-map-support": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.30",
    "karma-webpack": "^2.0.3",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.0",
    "ts-node": "^2.1.0",
    "tslib": "^1.6.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "typescript-eslint-parser": "^2.0.0",
    "webpack": "^2.2.1",
    "webpack-build-notifier": "^0.1.13",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-dll-bundles-plugin": "^1.0.0-beta.5",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@angular/compiler": "^4.0.0-rc.5",
